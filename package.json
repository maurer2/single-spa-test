{
  "name": "single-spa-test",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:maurer2/single-spa-test.git",
  "author": "Martin",
  "license": "MIT",
  "scripts": {
    "setup": "yarpm install && yarpm run setup:sender && yarpm run setup:receiver",
    "setup:sender": "cd app/apps/sender && yarpm install",
    "setup:receiver": "cd app/apps/receiver && yarpm install",
    "start": "yarpm run start:sender & yarpm run start:receiver",
    "start:sender": "cd app/apps/sender && PORT=8001 yarpm start",
    "start:receiver": "cd app/apps/receiver && yarpm serve --port 8002",
    "serve": "serve -s -l 8000"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "yarpm": "^0.2.1"
  },
  "dependencies": {
    "serve": "^11.3.0"
  }
}
